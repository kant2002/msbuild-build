<Window x:Class="ПостПроцессінг.ГоловнеВікно"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ПостПроцессінг"
        mc:Ignorable="d"
        Title="Приклад пост-процесінгу" Height="450" Width="800">
    <Grid >
        <StackPanel Orientation="Vertical" Margin="10">
            <TextBlock>Ім'я</TextBlock>
            <TextBox Text="{Binding Імя}" />
            <TextBlock>Прізвище</TextBlock>
            <TextBox Text="{Binding Прізвище}" />
            <TextBlock>Повне ім'я</TextBlock>
            <TextBox Text="{Binding ПовнеІмя, Mode=OneWay}" IsReadOnly="True" />
        </StackPanel>
    </Grid>
</Window>
